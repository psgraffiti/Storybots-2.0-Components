    @mixin modal($id, $back-color: $modal-background, $border: $modal-border, $color: $modal-text-color, $width-size: auto)<br><br>
    Required Parameters:<br>
    <ol>
        <li>id</li>
    </ol>
    Optional Parameters:<br>
    <ol>
        <li>background color (default is $modal-background)</li>
        <li>border color (default is $modal-border)</li>
        <li>text color (default is $modal-text-color)</li>
        <li>width size (defualt is auto)</li>
    </ol>
</div>

